{
    "compilerOptions": {
        "target": "ES2022", // modern output
        "module": "NodeNext", // keep ES modules
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}